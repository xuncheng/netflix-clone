#top-header
  = link_to "netflix", root_url, id: "logo"
  %nav
    %ul.nav.navbar-nav
      %li= link_to "Videos",   home_path
      %li= link_to "My Queue", "#"
      %li= link_to "People",   "#"
    %ul.nav.navbar-nav.navbar-right
      %li.dropdown
        %a.dropdown-toggle{ "data-toggle" => "dropdown", href: "#" }
          Welcome, Philip J. Fry
          %span.caret
        %ul.dropdown-menu{ role: "menu" }
          %li
            = link_to "Account", "#"
            = link_to "Plan and Billing", "#"
            = link_to "Sign Out", "#"
    = form_tag search_videos_path, class: "navbar-form navbar-right" do
      .form-group
        = text_field_tag :search_term, nil, placeholder: "Search for videos here", class: "form-control"
      = button_tag "Search", class: "btn btn-default"
